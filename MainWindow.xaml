<Window x:Class="codex_windows_desktop_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:codex_windows_desktop_client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="UserMessageTemplate">
            <StackPanel Margin="0,5" HorizontalAlignment="Right">
                <Border Background="#DCF8C6" CornerRadius="10" Padding="10" MaxWidth="500">
                    <TextBlock Text="{Binding Content}" TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="CodexMessageTemplate">
            <StackPanel Margin="0,5" HorizontalAlignment="Left">
                <RichTextBox IsReadOnly="True" BorderThickness="0" Background="Transparent" MaxWidth="500">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="{Binding Content}"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </StackPanel>
        </DataTemplate>
        <local:ChatMessageTemplateSelector x:Key="ChatSelector"
                                           UserTemplate="{StaticResource UserMessageTemplate}"
                                           CodexTemplate="{StaticResource CodexMessageTemplate}"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Project folder selection -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="ProjectPathTextBox" Grid.Column="0" Margin="0,0,5,0"/>
            <Button Grid.Column="1" Content="Browse..." Width="80" Click="BrowseButton_Click"/>
        </Grid>

        <!-- Chat messages -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ChatList" ItemTemplateSelector="{StaticResource ChatSelector}"/>
        </ScrollViewer>

        <!-- Input area -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="InputTextBox" Grid.Column="0" Margin="0,0,5,0"/>
            <Button Grid.Column="1" Content="Send" Width="80" Click="SendButton_Click"/>
        </Grid>
    </Grid>
</Window>
